#!/bin/sh

. panel_config

clock() {
    # Output clock format "Mon 01 Jan 2015 00:00"
    dateo=`date '+%a %d %b %R'`
    echo "%{F$GRAY02}%{B$BLACK} time %{F-}%{B$BLACK} $dateo"

}

#mail() {
#    newmail=`ls Mail/zidhussein-gmail/INBOX/new | wc -l`
#    echo "%{F$GRAY02}%{B$BLACK} e-mail %{F-}%{B$BLACK} $newmail"

#}

volume() {
    # Get current volume
    vol=`amixer get Master | grep 'Front Left' | egrep -o "[0-9]+%" |\
        rev | cut -c 2- | rev`

    # Decide which icon and colour to show
    if [ ! `amixer get Master | tail -1 | grep -oe off` ]; then
        if [ $vol == 0 ]; then
            volico="%{F$GRAY02}%{B$BLACK} volume %{F-}%{B$BLACK}"
        else
            volico="%{F$GRAY02}%{B$BLACK} volume %{F-}%{B$BLACK}"
        fi
    else
        volico="%{F$GRAY05}%{B$GRAY03} MUTE %{F-}%{B$BLACK}"
    fi

    # Change colour if volume is lower than 60
    if [ $vol -lt 60 ]; then
        vol="%{F$GRAY04}%{B$BLACK}$vol"
    fi

    echo "$volico $vol"

}

cpu() {
    # Output CPU usage as an integer
    cpu=$(ps -eo pcpu | awk 'BEGIN {sum=0.0f} {sum+=$1} END {print sum}' | cut -c1-2)
    echo "%{F$GRAY02}%{B$BLACK} cpu %{F-}%{B$BLACK} $cpu%"
}

hdd() {
    # Show root partition % used and home volume remaining
    HDDROOT=`df -h | grep /dev/sda1 | awk '{print $5}'`
    HDDHOME=`df -h | grep /dev/sda1 | awk '{print $4}'`
    echo "%{F$GRAY02}%{B$BLACK} root %{F-}%{B$BLACK} $HDDROOT %{F$GRAY02}%{B$BLACK} home %{F-}%{B$BLACK} $HDDHOME"

}

ram() {
    # Show ram used / ram total
    total=`free -mh | grep Mem | awk '{print $3}'`
    free=`free -mh | grep Mem | awk '{print $2}'`
    echo "%{F$GRAY02}%{B$BLACK} ram %{F-}%{B$BLACK} $total / $free"
}


